@model IEnumerable<RestaurantManager.Models.MenuItem>
@using RestaurantManager.Models

@{
    ViewBag.Title = "Menu";
    var dietaryTags = ViewBag.DietaryTags as List<DietaryTag>;
}

<div class="banner-image position-relative text-white text-center">
    <img src="~/images/harvest-bowl-green-img.png" class="img-fluid w-100" alt="Restaurant Image" />
    <div class="banner-text position-absolute top-50 start-50 translate-middle">
        <h2 class="fw-bold text-light display-4">We Offer Delivery, Pickup & In-Restaurant Dining</h2>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <partial name="_MenuSidebar" model="dietaryTags" />
        <main class="col-md-9">
            <partial name="_MenuGroupedItems" model="Model" />
        </main>
    </div>
</div>