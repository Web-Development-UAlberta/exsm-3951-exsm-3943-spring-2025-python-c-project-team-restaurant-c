@model RestaurantManager.Models.ChangePasswordViewModel

<div class="card shadow-sm rounded-4 p-4 mb-5 border-0" style="max-width: 600px; margin: auto;">
    <h4 class="mb-4 text-dark fw-bold">Change Password</h4>

    <form asp-action="ChangePassword" asp-controller="CustomerDashboard" method="post">
        <div class="mb-3">
            <label asp-for="CurrentPassword" class="form-label text-muted fw-medium">Current Password</label>
            <input asp-for="CurrentPassword" class="form-control rounded-3" type="password" required />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewPassword" class="form-label text-muted fw-medium">New Password</label>
            <input asp-for="NewPassword" class="form-control rounded-3" type="password" required />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="form-label text-muted fw-medium">Confirm New Password</label>
            <input asp-for="ConfirmPassword" class="form-control rounded-3" type="password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary rounded-3">Update Password</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}