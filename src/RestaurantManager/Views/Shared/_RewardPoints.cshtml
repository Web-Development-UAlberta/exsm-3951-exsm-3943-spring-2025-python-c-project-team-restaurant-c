@model RestaurantManager.Models.User

<div class="harvest-rewards card shadow-sm rounded-4 p-4 mb-4 reward-card text-white position-relative overflow-hidden">
    <div class="mb-3">
        <h3 class="mb-1">Harvest Club Rewards</h3>
    </div>

    @if (Model != null)
    {
        <div class="rewards-points fs-5 mt-4">
            <p class="mb-1"><strong>Current Points</strong></p>
            <p class="mb-3 display-points">@Model.RewardsPoints</p>
            <p class="mb-1">1 point = $1</p>
            <p class="mb-1">250 points = $20 off</p>
        </div>
    }
    else
    {
        <p class="text-warning fw-semibold mt-3">Reward points not available.</p>
    }
</div>


<style>
    .reward-card {
        background: linear-gradient(135deg, var(--terracotta), var(--terracotta-active));
        border: none;
        color: white;
        position: relative;
        border-radius: 1rem;
        max-width: 500px;
        margin: auto;
        width: 100%;
    }

    .reward-card::before {
        content: "";
        position: absolute;
        top: -20%;
        right: -20%;
        width: 250px;
        height: 250px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        z-index: 0;
    }

    .reward-card h3,
    .reward-card p {
        position: relative;
        z-index: 1;
    }

    .rewards-points p {
        font-size: 1.15rem;
        line-height: 1.4;
        color: white;
    }

    .display-points {
        font-size: 6rem;
        font-weight: 800;
        letter-spacing: 2px;
        line-height: 1.1;
        color: #fff;
    }
</style>
